<!DOCTYPE html>

<html>
  <head>
    <title><%= @title %></title>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" media="all" href="docco.css" />
  </head>
  <body>
    <div id="container">
      <div id="background"></div>
      <% if @sources.length > 1: %>
        <div id="jump_to">
          Jump To &hellip;
          <div id="jump_wrapper">
            <div id="jump_page">
              <% for source in @sources: %>
                <a class="source" href="<%= @path.basename(@destination(source)) %>">
                  <%= @path.basename(source) %>
                </a>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <table cellpadding="0" cellspacing="0">
        <thead>
          <tr>
            <th class="docs">
              <h1>
                <%= @title %>
              </h1>
            </th>
            <th class="code">
            </th>
          </tr>
        </thead>
        <tbody>
          <% for section, i in @sections: %>
            <tr id="section-<%= i + 1 %>">
              <td class="docs">
                <div class="pilwrap">
                  <a class="pilcrow" href="#section-<%= i + 1 %>">&#182;</a>
                </div>
                <%= section.docs_html %>
              </td>
              <td class="code">
                <%= section.code_html %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>